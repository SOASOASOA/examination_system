<?xml version="1.0" encoding="UTF-8" ?>  
<!DOCTYPE mapper PUBLIC "-//ibatis.apache.org//DTD Mapper 3.0//EN"      
 "http://ibatis.apache.org/dtd/ibatis-3-mapper.dtd">

<mapper namespace="cn.soa.cloudnote.dao.NotebookDao">
	<select id="findNotebooksByUserName" parameterType="string" 
			resultType="cn.soa.cloudnote.entity.Notebook">
		select 
			cn.*
		from 
			cn_notebook cn left join cn_user cu on cn.cn_user_id=cu.cn_user_id
		where 
			cu.cn_user_name=#{userName};
	</select>	
	<insert id="addNotebook" parameterType="cn.soa.cloudnote.entity.Notebook" >
		insert into 
			cn_notebook
		VALUES
			(#{cn_notebook_id},#{cn_user_id},#{cn_notebook_type_id},
				#{cn_notebook_name},#{cn_notebook_desc},#{cn_notebook_createtime}
			)	
	</insert>
	<update id="moidfyNotebookNameByUserId" >
		update 
			cn_notebook
		set 
			cn_notebook_name=#{0}
		where
 			cn_user_id=#{2} and cn_notebook_id=#{1}
	</update>
	<select id="findNotebookIdByNotebookName" parameterType="string" resultType="string">
		select 
			cn_notebook_id
		from 
			cn_notebook
		where
			cn_notebook_name=#{oldNotebookName}
	</select>
	<delete id="deleteNotebookBynotebookeId">
		delete from 
			cn_notebook
		where 
			cn_notebook_id=#{0} and cn_user_id=#{1}
	</delete>
	
	<select id="findNoteByNotebookId" parameterType="string" resultType="cn.soa.cloudnote.entity.Note">
		select 
			*
		from 
			cn_note
		where 
			cn_notebook_id=#{notebookeId};
	</select>
</mapper>