<?xml version="1.0" encoding="UTF-8" ?>  
<!DOCTYPE mapper PUBLIC "-//ibatis.apache.org//DTD Mapper 3.0//EN"      
 "http://ibatis.apache.org/dtd/ibatis-3-mapper.dtd">

<mapper namespace="cn.soa.cloudnote.dao.UserDao">
	<select id="findUserByName" parameterType="string" 
			resultType="cn.soa.cloudnote.entity.User">
		select 
			*
		from 
			cn_user 
		where 
			cn_user_name=#{userName}; 
	</select>	
	<insert id="addUser" parameterType="cn.soa.cloudnote.entity.User"  >
		insert into 
			cn_user
		VALUES
			(#{cn_user_id},#{cn_user_name},#{cn_user_password},
				#{cn_user_token},#{cn_user_nick});
	</insert>
	
	<select id="findUerIdByUserName" parameterType="string" resultType="string">
		select 
			cn_user_id
		from 
			cn_user
		where 
			cn_user_name=#{userName}
	</select>
</mapper>